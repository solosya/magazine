<div class="news__social {{ (class is defined) ? class : '' }}" data-guid="{{article.guid}}"> 
    <a href="https://www.facebook.com/sharer/sharer.php?u={{article.url}}&title={{ article.title|url_encode }}" target="_blank" class="news__social-link news__social-link__facebook">Share</a>
    <a href="https://twitter.com/share?url={{article.url}}&text={{ article.title|url_encode }}" target="_blank" class="news__social-link news__social-link__twitter">Share</a>
    <a href="https://plus.google.com/share?url={{article.url}}" target="_blank" class="news__social-link news__social-link__google-plus">Share</a>
    
    {% set subject = article.title~' '~_Network.getNetworkTitle()%}
    {% set body = 'I thought you would find this article interesting'|url_encode%}
    {% set body = body ~'%0D%0A%0D%0A' ~ article.url%}
    
    <a href="mailto:?subject={{subject}}&body={{body}}"  class="news__social-link news__social-link__email">Email</a>
    <a href="#disqusCommentBlock"  class="news__social-link news__social-link__comments disqusComment" ><span class="total">{{article.total['comment']}}</span> Comments</a>
</div>
