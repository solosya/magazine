                <div class="col-12">
                    <div class="c-header__top__container">
                        <div class="c-nav c-nav-1">
                            <a class="c-nav--signIn u-mr--30" href="javascript:;">Sign in</a>
                            <ul class="c-nav__grid">
                                <li>
                                    <a class="c-nav__item" href="javascript:;">About</a>
                                </li>
                                <li>
                                    <a class="c-nav__item" href="javascript:;">Contact</a>
                                </li>
                                <li>
                                    <a class="c-nav__item" href="javascript:;">Advertise</a>
                                </li>
                            </ul>
                        </div>
                        <div class="u-generic-socialIcons">
                            <a href="javascript:;" class="u-generic-socialIcons__item">
                                <img src="{{networkData.templatePath}}/static/icons/fb-solid.svg" alt="image" />
